            <i class="fa-solid fa-pen-to-square"></i>
          </button>
        </div>
        <div class="description hidden"><%=el.description%></div>
        <div class="deadline-btnsTasks">
          <p><%= el.deadline %></p>
          <div class="btnsTarefa">
            <div class="comecar"></div>
            <div class="completar"></div>
            <div class="excluir"></div>
          </div>
        </div>
      </div>
      <% } %> <%}) %> <% }%>
    </div>
  </div>

  <div class="tarefas-state">
    <div class="completed">
      <div class="green"></div>
      <h4>Completada</h4>
    </div>

    <div class="tarefas">
